{
  "manifest_version": 3,
  "name": "DOMQL Inspector",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_title": "Inspect DOM"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "devtools_page": "devtools.html"
}
